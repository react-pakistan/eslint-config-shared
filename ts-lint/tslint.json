{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "src/eCommerceV1UI/icons/*.tsx",
      "src/icons/**/*.tsx"
    ]
  },
  "defaultSeverity": "error",
  "jsRules": {
    "object-literal-sort-keys": false
  },
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "array-type": [
      true,
      "generic"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": [
      true
    ],
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": [
      true,
      "always-prefix"
    ],
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "max-line-length": [
      true,
      120
    ],
    "member-access": false,
    "no-any": false,
    "no-console": [true, "log", "error"],
    "no-eval": true,
    "no-implicit-dependencies": false,
    "no-internal-module": true,
    "no-namespace": [
      true,
      "allow-declarations"
    ],
    "no-submodule-imports": false,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "ordered-imports": [
      false
    ],
    "prefer-const": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration",
      "member-variable-declaration",
      "call-signature",
      "arrow-call-signature",
      "arrow-parameter"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-module"
    ]
  }
}
